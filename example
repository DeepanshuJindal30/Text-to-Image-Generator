import React, { useEffect, useState } from "react";
import api from "../api";
import {
  Button,
  Table,
  TableHead,
  TableRow,
  TableCell,
  TableBody,
  Container,
} from "@mui/material";

export default function AMLList() {
  const [amlList, setAmlList] = useState([]);

  // Fetch AML data
  const fetchAML = async () => {
    try {
      const res = await api.get("/AML"); // Correct API
      setAmlList(res.data);
    } catch (err) {
      console.error("Error fetching AML data:", err);
    }
  };

  // Delete AML record (using plan_Number as ID)
  const deleteAML = async (planNumber) => {
    try {
      await api.delete(`/AML/${planNumber}`);
      fetchAML();
    } catch (err) {
      console.error("Error deleting AML record:", err);
    }
  };

  useEffect(() => {
    fetchAML();
  }, []);

  return (
    <Container style={{ marginTop: "20px" }}>
      <h2>AML Records</h2>
      <Table>
        <TableHead>
          <TableRow>
            <TableCell>Plan Number</TableCell>
            <TableCell>Status</TableCell>
            <TableCell>Compliance Date</TableCell>
            <TableCell>Comments</TableCell>
            <TableCell>Actions</TableCell>
          </TableRow>
        </TableHead>
        <TableBody>
          {amlList.length > 0 ? (
            amlList.map((aml, index) => (
              <TableRow key={index}>
                <TableCell>{aml.plan_Number}</TableCell>
                <TableCell>{aml.status}</TableCell>
                <TableCell>
                  {aml.compliance_Date
                    ? new Date(aml.compliance_Date).toLocaleDateString()
                    : "-"}
                </TableCell>
                <TableCell>{aml.comments || "-"}</TableCell>
                <TableCell>
                  <Button
                    color="error"
                    onClick={() => deleteAML(aml.plan_Number)}
                  >
                    Delete
                  </Button>
                </TableCell>
              </TableRow>
            ))
          ) : (
            <TableRow>
              <TableCell colSpan={5} style={{ textAlign: "center" }}>
                No records found
              </TableCell>
            </TableRow>
          )}
        </TableBody>
      </Table>
    </Container>
  );
}