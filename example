import { createSlice } from "@reduxjs/toolkit";

const authSlice = createSlice({
  name: "auth",
  initialState: {
    isLoggedIn: false,
    role: null,
    token: null,
  },
  reducers: {
    setAuth(state, action) {
      const { token, role } = action.payload;
      state.isLoggedIn = true;
      state.token = token;
      state.role = role;
    },
    clearAuth(state) {
      state.isLoggedIn = false;
      state.token = null;
      state.role = null;
    },
  },
});

export const { setAuth, clearAuth } = authSlice.actions; // âœ… Make sure clearAuth is exported
export default authSlice.reducer;